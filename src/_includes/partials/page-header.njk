    {% if pageHeaderImage %}
    <style>
    header .headerimage { background-image: 
            url("{{ pageHeaderImage }}");
    }
    </style>
    {% endif %}
    <header id="header" class="xl:w-6/12 lg:w-8/12 md:w-10/12 sm:w-full mx-auto sm:rounded-2xl sm:my-20">
    <div class="headerimage mx-auto break-normal text-gray-50 sm:rounded-2xl">
    <div class="overlay sm:rounded-2xl">
    <div class="mx-6 pt-8 pb-8">
    <h1 class="leading-loose my-6 serif text-4xl md:text-5xl">
      <span class="py-2 inline-block my-6">{{ pageHeaderTitle }}</span>
    </h1> 
    {% if pageHeaderSummary %}
       <p class="leading-loose my-5 md:my-10 text-2xl">
         {{ pageHeaderSummary | safe }}
      </p>
    {% endif %}
    </div>
</div>
    </div>
</header>
