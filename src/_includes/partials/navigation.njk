	   {% set navPages = collections.all | eleventyNavigation %}
  <nav class="mt-0 mr-12">
      {#- Read more about `eleventy-navigation` at https://www.11ty.dev/docs/plugins/navigation/ #}
        <div class="text-sm text-slate-200">
          <div class="hidemobile p-4 bg-blue-200 border-2 border-blue-500 text-slate-600 rounded-2xl">
          <span class="-mt-12 healy healy-huge healy-fauxthot"></span> 
       <p class="text-xl p-2 md:p-0 pb-5 hidemobile "><a class="text-transparent text-2xl bg-clip-text bg-gradient-to-r from-yellow-300 to-purple-600 hover:from-yellow-300 hover:to-yellow-300 underline decoration-wavy" href="/">{{ site.title }}</a> ü•ëüçû {{ site.description }}</p>
        </div>
         <ul class="md:block flex flex-row justify-center">
         {%- for entry in navPages %}
          <li>
          <a class="p-2 my-5 mr-2 text-slate-200 bg-purple-600 rounded-2xl md:p-5 inline-block  md:block hover:bg-yellow-100 hover:text-slate-600 hover:border-yellow-400 hover:shadow-lg hover:shadow-orange-400/50 hover:border-2 {% if entry.url == page.url %}border-2 text-slate-600 bg-purple-300 md:border-l-2 border-purple-500{% endif %}" href="{{ entry.url | url }}">{{ entry.title }}</a>
           </li>
                {%- endfor %}
             </ul>
             </div>
   </nav>
   <div class="hidemobile">
     <h2 class="text-4xl my-5 text-yellow-500 font-serif">All Tags</h2>
     <p class="text-sm my-2">
    {% for tag in collections.tagList %}{% set tagUrl %}/tag/{{ tag | slug }}/{% endset %} <a class="inline-block m-1 rounded-2xl bg-purple-600 font-bold text-sm text-yellow-100 p-2 hover:bg-yellow-100 hover:text-slate-600 hover:border-yellow-400 hover:shadow-lg hover:shadow-orange-400/50 hover:border-2" href="{{ tagUrl | url }}">{{ tag }}</a>{% endfor %}
    </p>
</div>
