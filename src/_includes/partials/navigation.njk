	   {% set navPages = collections.all | eleventyNavigation %}
  <nav class="mt-0 mr-12">
      {#- Read more about `eleventy-navigation` at https://www.11ty.dev/docs/plugins/navigation/ #}
        <div class="text-sm mx-auto text-gray-100">
          <div class="hidemobile p-12 bg-purple-800 rounded-2xl bg-clip-padding backdrop-filter backdrop-blur-2xl bg-opacity-20 ">
          <span class="healy healy-big healy-fauxthot"></span> <span class="pr-5 pl-5 text-yellow-500"></span>
       <p class="text-2xl text-gray-100 p-2 md:p-0 pb-5 hidemobile "><a class="text-transparent text-4xl bg-clip-text bg-gradient-to-r from-yellow-300 to-purple-400 hover:from-yellow-300 hover:to-yellow-300 underline decoration-wavy" href="/">{{ site.title }}</a> ü•ëüçû {{ site.description }}</p>
        </div>
         <ul class=" list-reset flex md:block">
         {%- for entry in navPages %}
          <li>
          <a class="p-2 my-6 mr-2 text-gray-100 bg-purple-800 rounded-2xl bg-clip-padding backdrop-filter backdrop-blur-2xl bg-opacity-20 md:p-5 md:w-full inline-block md:block hover:bg-purple-600 hover:border-yellow-200 hover:text-white hover:shadow-2xl hover:shadow-orange-600/50 hover:border-2 md:hover:border-yellow-200 {% if entry.url == page.url %}border-2 bg-yellow-100 text-gray-100 md:border-l-2 border-yellow-500{% endif %}" href="{{ entry.url | url }}">{{ entry.title }}</a>
           </li>
                {%- endfor %}
             </ul>
             </div>
   </nav>
   <div class="w-full md:container mx-auto hidemobile">
    <img class="my-10 shadow-xl" src="/images/assets/de-groof-falling.jpg" alt="">
     <h2 class="text-4xl my-5 text-yellow-500 font-serif">All Tags</h2>
     <p class="text-xl my-5">
    {% for tag in collections.tagList %}{% set tagUrl %}/tag/{{ tag | slug }}/{% endset %} <a class="inline-block m-1 bg-purple-600 font-bold text-xl text-yellow-100 p-1 hover:bg-blue-700 hover:text-gray-50" href="{{ tagUrl | url }}">{{ tag }}</a>{% endfor %}
    </p>
</div>
