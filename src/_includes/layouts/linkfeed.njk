{% extends "layouts/base.njk" %}
 {% set pageHeaderTitle = title %}
 {% set pageHeaderImage = imageURL %}
 {% set pageHeaderSummary = content %}
 {% set postListItems = pagination.items %}
{% block content %}
      <section class="grid gap-4 grid-cols-2">
         {% for item in postListItems %}
		<div class="p-2 md:p-8 hover:bg-pink-100 border-4 border-gray-500 bg-gray-100 rounded-t rounded-b overflow-hidden hover:shadow-2xl hover:border-pink-500">
           <a class="text-2xl md:text-4xl font-bold font-serif text-red-400" href="{{ item.data.link }}">{{ item.data.title }}</a> 
           <p><b class="text-gray-800 font-serif text-base mb-5">Genre</b> {{ item.data.genre}}</p>
          </div>
        {% endfor %}
        </section>
           {% if not tag %}
     {% include "partials/pagination.njk" %}
    {% endif %}
{% endblock %}