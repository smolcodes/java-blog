{% extends "layouts/base.njk" %}
 {% set pageHeaderTitle = title %}
 {% set pageHeaderImage = imageURL %}
 {% set pageHeaderSummary = content %}
 {% set postListItems = pagination.items %}
 {% if tag %}
  {% set postListItems = collections[tag] | reverse %}
  {% set pageHeaderTitle = 'Links filed under "' + tag +'"' %}
{% endif %}
{% block content %}
     <div class="w-10/12 m-auto mb-2/12 md:m-0 md:w-auto flex flex-wrap space-x-8 space-y-4">
    <a href="/links/" class="relative z-[2] font-sans items-center rounded-2xl bg-orange-500 hover:bg-yellow-100 hover:text-slate-600 px-6 py-2 text-base font-medium uppercase leading-tight text-white shadow-md transition duration-150 ease-in-out hover:bg-primary-700 hover:shadow-lg focus:bg-primary-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-primary-800 active:shadow-lg">
     all
   </a>
   <a href="/links/tag/article/" class="relative z-[2] font-sans items-center rounded-2xl bg-teal-500 hover:bg-yellow-100 hover:text-slate-600 px-6 py-2 text-base font-medium uppercase leading-tight text-white shadow-md transition duration-150 ease-in-out hover:bg-primary-700 hover:shadow-lg focus:bg-primary-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-primary-800 active:shadow-lg">
     article
   </a>
    <a href="/links/tag/personal-site/" class="relative z-[2] font-sans items-center rounded-2xl bg-pink-500 hover:bg-yellow-100 hover:text-slate-600 px-6 py-2 text-base font-medium uppercase leading-tight text-white shadow-md transition duration-150 ease-in-out hover:bg-primary-700 hover:shadow-lg focus:bg-primary-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-primary-800 active:shadow-lg">
     personal site
   </a>
   <a href="/links/tag/newsletter/" class="relative z-[2] font-sans items-center rounded-2xl bg-cyan-500 hover:bg-yellow-100 hover:text-slate-600 px-6 py-2 text-base font-medium uppercase leading-tight text-white shadow-md transition duration-150 ease-in-out hover:bg-primary-700 hover:shadow-lg focus:bg-primary-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-primary-800 active:shadow-lg">
     newsletter
   </a>
   <a href="/links/tag/magazine/" class="relative z-[2] font-sans items-center rounded-2xl bg-lime-500 hover:bg-yellow-100 hover:text-slate-600 px-6 py-2 text-base font-medium uppercase leading-tight text-white shadow-md transition duration-150 ease-in-out hover:bg-primary-700 hover:shadow-lg focus:bg-primary-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-primary-800 active:shadow-lg">
     magazine
   </a>
   </div>
      <section id="postlist" class="w-10/12 m-auto md:m-0 sm:w-auto grid gap-4 grid-cols-1 md:grid-cols-2 mt-10">
         {% for item in postListItems %}
		<article class="w-full md:w-auto md:flex md:flex-col blocks p-2 md:p-8 rounded-t rounded-b overflow-hidden">
           <a class="w-full text-2xl md:text-4xl font-bold font-sans text-red-400 hover:text-yellow-500" href="{{ item.data.link }}">{{ item.data.title }}</a>   
      {% for tag in item.data.tags %}
          <a class="w-10/12 md:w-6/12 block mt-6 rounded-xl px-4 py-2 bg-teal-200 font-bold text-slate-600 text-center text-sm hover:bg-blue-700 hover:text-gray-50" href="/links/tag/{{ tag | slug }}/">{{ tag | replace(' ', ' ') | capitalize }}</a>
      {% endfor %}
          </article>
        {% endfor %}
        </section>
             {% if not tag %}
     {% include "partials/pagination.njk" %}
    {% endif %}
{% endblock %}