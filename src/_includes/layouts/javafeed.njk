{% extends "layouts/base.njk" %}
 {% set pageHeaderTitle = title %}
 {% set pageHeaderImage = imageURL %}
 {% set pageHeaderSummary = content %}
 {% set postListItems = pagination.items %}
{% block content %}
     <section>
            {% for item in postListItems %}
       <article class="mb-8 border-b-2 border-gray-500 pb-10">
			<div class="p-2 md:p-8 mb-10 hover:bg-green-100 border-4 border-gray-500 bg-gray-100 rounded-t rounded-b overflow-hidden hover:shadow-md hover:shadow-2xl hover:border-green-500 pb-5">
			<div class="no-underline hover:no-underline">
          <h2><a class="text-2xl md:text-4xl font-bold font-serif text-green-600" href="{{ item.url }}">{{ item.data.title }}</a></h2>
         <p class="mb-4"> <b>Genre: </b>{{ item.data.genre }} <b>Rating</b> {{ item.data.rating}} <b>Date</b>      <time datetime="{{ item.data.date | w3DateFilter }}">{{ item.data.date | asPostDate  }}</time>
</p>
       </div>
       </div>
          <a class="bg-yellow-100 p-2 hover:bg-yellow-300 mt-4"href="{{ item.url }}">Read ðŸ‘‰</a>
 </article>
        {% endfor %}
  </section>
   {% if not tag %}
     {% include "partials/pagination.njk" %}
    {% endif %}
{% endblock %}