{% extends "layouts/base.njk" %}
 {% set pageHeaderTitle = title %}
 {% set pageHeaderImage = imageURL %}
{% set pageHeaderSummary %}
  <b>Author</b> {{ author }} <b>Date</b> <time datetime="{{ date | w3DateFilter }}">{{ date | asPostDate }}</time> <b>Rating</b> {{ rating }}<b>Recommend</b> {{ recommend }}
    {% if genres %}
      {% for genre in genres %}
          <a class="inline-block font-bold text-lg text-yellow-700 p-1 hover:bg-blue-700 hover:text-gray-50" href="/genre/{{ genre | slug }}/">#{{ genre | replace(' ', '') | capitalize }}</a>
      {% endfor %}
  {% endif %}
{% endset %}
{% block content %}
    <article class="post-content">
         {% if toc == "true" %}
      {% include "partials/toc.njk" %}
      {% endif %}
      {{ content | safe }}
    </article>
{% endblock %}